---
import MetricsCard from '../Metrics/metrics_card.astro';
import MarqueeSection from '../Metrics/marquee.astro';
---

<section class="relative w-full min-h-screen bg-black overflow-hidden flex flex-col">
  {/* Background Image Section */}
  <div class="w-full flex items-center justify-center mt-12 md:mt-16 lg:mt-24">
    <img 
      src="/metrics_bg.jpg" 
      alt="Background" 
      class="w-[95%] md:w-[85%] lg:w-[75%] h-auto object-contain"
    />
  </div>
  
  {/* Metrics Card*/}
  <MetricsCard />

  {/*Marquee Section*/}
  <MarqueeSection />
</section>