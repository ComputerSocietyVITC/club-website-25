---
interface Event {
  date: string;
  month: string;
  title: string;
  description: string;
  link: string;
  highlighted: boolean;
}
const events: Event[] = [
  { date: "1st", month: "MARCH", title: "New Event", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit", link: "#", highlighted: false },
  { date: "1st", month: "MARCH", title: "New Event", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit", link: "#", highlighted: false },
  { date: "1st", month: "MARCH", title: "New Event", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit", link: "#", highlighted: false },
  { date: "1st", month: "MARCH", title: "New Event", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit", link: "#", highlighted: false },
];
---
<div class="w-full min-h-screen flex items-center justify-center bg-black/95 px-4 sm:px-6 md:px-8">
  <div class="w-full max-w-[1400px] py-8 sm:py-12 md:py-16">
    <div class="w-full bg-stone-900/50 p-4 sm:p-6 md:p-8 rounded-lg">
      <h2 class="text-white text-2xl sm:text-3xl md:text-4xl font-mono mb-4 sm:mb-6 md:mb-8 md:text-left">UPCOMING EVENTS</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 md:gap-8">
        {events.map((event) => (
          <div class="bg-neutral-900 p-4 sm:p-5 md:p-6 rounded-lg border border-neutral-800 relative overflow-hidden group hover:border-emerald-500 transition-colors duration-300">
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-6 md:gap-8">
              <div class="flex flex-col items-center">
                <span class={`${event.highlighted ? 'text-emerald-500' : 'text-emerald-500/80'} text-xl sm:text-2xl font-mono`}>
                  {event.date}<sup class="text-xs sm:text-sm">st</sup>
                </span>
                <span class="text-neutral-400 text-xs sm:text-sm font-mono uppercase">{event.month}</span>
              </div>
              <div class="flex-1 text-center sm:text-left">
                <h3 class="text-white font-mono text-base sm:text-lg mb-2">{event.title}</h3>
                <p class="text-neutral-400 text-xs sm:text-sm mb-2">{event.description}</p>
                <a
                  href={event.link}
                  class="text-emerald-500 text-xs sm:text-sm hover:text-emerald-400 transition-colors duration-300 inline-block"
                >
                  [ register here ]
                </a>
              </div>
            </div>
            <div class="absolute inset-0 bg-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
